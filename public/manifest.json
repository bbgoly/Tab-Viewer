{
    "manifest_version": 3,
    "name": "Tab Viewer",
    "description": "",
    "version": "1.0",
    "action": {
      "default_title": "Click to open side panel"
    },
    "side_panel": {
      "default_path": "index.html"
    },
    "permissions": [
      "scripting",
      "activeTab",
      "sidePanel",
      "tabs"
    ],
    "incognito": "spanning",
    "background": {
      "service_worker": "service-worker.js"
    },
    "commands": {
      "_execute_action": {
        "suggested_key": "Ctrl+Shift+E",
        "description": "Opens the Tab Viewer extension"
      }
    },
    "host_permissions": ["http://*/*", "https://*/*"]
  }
  